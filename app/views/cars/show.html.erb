<% flash.each do |type, msg| %>
    <% if type != 'error' %>
        <div class = "alert alert-info">
            <%= msg %>
        </div>
    <% else %>
        <div class = "alert alert-danger">
            <%= msg %>
        </div>
    <% end %>
<% end %>
<div class="card mt-3">
  <h5 class="card-header"><%= @car.make %> - <%= @car.model %></h5>
  <div class="card-body">
    <h5 class="card-title">Characteristics</h5>
    <p class="card-text"><b>Year:</b> <%= @car.year %></p>
    <p class="card-text"><b>Color:</b> <%= @car.color %></p>
    <p class="card-text"><b>Description:</b> <%= @car.description %></p>
  </div>
</div>

<h2 class="mt-3">Pre-Booking</h2>
<%= form_with(model: [ @car, @car.rentees.build ], local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control', placeholder: 'John Smith' %>
  </div>

  <div class="row mb-3">
    <div class="col">
      <%= form.label :phone, class: 'form-label' %>
      <%= form.text_field :phone, class: 'form-control', placeholder: '55 85 99999 9999' %>
    </div>
    <div class="col">
      <%= form.label :email, class: 'form-label' %>
      <%= form.text_field :email, class: 'form-control', placeholder: 'john.smith@server.com' %>
    </div>
  </div>

    <button type="submit" name="commit" class="btn btn-primary float-right mt-3">Save Pre-booking</button>
    <a href="/admin/" class="btn btn-danger mt-3">Back</a>
    
<% end %>
